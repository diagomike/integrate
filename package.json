{
  "name": "integrate",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:blog": "turbo run start --scope=@repo/blog --include-dependencies",
    "start:analytics": "turbo run start --scope=@repo/analytics --include-dependencies",
    "start:all": "turbo run start --parallel --include-dependencies"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
